#!/usr/bin/env groovy

pipeline {
    agent none
    tools {
        maven 'Maven 3.6.3'
        jdk 'jdk11'
    }
    stages {
        stage('Tests') {
            steps {
                sh "mvn test"
            }
        }
        stage('Build') {
            agent {
                docker { image 'maven:3.6.3-jdk-11' }
            }
            steps {
                sh "mvn package -Dmaven.test.skip=true"
            }
        }
    }
}